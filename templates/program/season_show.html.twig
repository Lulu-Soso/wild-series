{% extends 'base.html.twig' %}
{% block title %}Saison
	{{season.number }}
{% endblock %}

{% block body %}

	<h1>Saison
		{{season.number}}
		de
		{{season.program.title}}</h1>


	<p>Liste des épisodes</p>
	<ul>
		{% for episode in season.episodes %}
			<!--<li>Episode n° {{episode.title}}, synopsis : {{episode.synopsis}}  </li>-->
			<li>
				<a href="{{path('program_episode_show', {'programId': season.program.id, 'seasonId': season.id, 'episodeId': episode.id} )}}">Episode n°
					{{episode.title}}
				</a>
			</li>
		{% endfor %}


	</ul>


{% endblock %}
